@model ERPSystem.Models.User

<h2>Detalles del Usuario</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.UserId</dd>

        <dt class="col-sm-2">Nombre Completo</dt>
        <dd class="col-sm-10">@Model.FullName</dd>

        <dt class="col-sm-2">Usuario</dt>
        <dd class="col-sm-10">@Model.Username</dd>

        <dt class="col-sm-2">Rol</dt>
        <dd class="col-sm-10">@Model.Role</dd>

        <dt class="col-sm-2">Creado En</dt>
        <dd class="col-sm-10">@Model.CreatedAt.ToString("g")</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.UserId" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
</div>
