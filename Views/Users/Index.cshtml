@model IEnumerable<ERPSystem.Models.User>

<h2>Usuarios Activos</h2>

<a asp-action="InactiveUsers" class="btn btn-warning mb-2">Ver Usuarios Inactivos</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Username</th>
            <th>Full Name</th>
            <th>Role</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Username</td>
                <td>@user.FullName</td>
                <td>@user.Role</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.UserId" class="btn btn-primary btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@user.UserId" class="btn btn-danger btn-sm">Dar de baja</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success mt-2">Nuevo Usuario</a>
