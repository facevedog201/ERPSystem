@model IEnumerable<ERPSystem.Models.Service>
@{
    ViewData["Title"] = "Servicios Inactivos";
}

<h1>@ViewData["Title"]</h1>

<div class="mb-3">
    <a asp-action="Index" class="btn btn-primary me-2">
        <i class="bi bi-arrow-left me-2"></i> Ver Activos
    </a>
</div>

<!-- Buscador dinámico -->
<div class="row mb-3">
    <div class="col-md-6">
        <input type="text" id="searchInputInactiveService" class="form-control"
               placeholder="Buscar por nombre, descripción o precio..." />
    </div>
</div>

<!-- Loader -->
<div id="loadingSpinner" class="text-center my-3" style="display:none;">
    <div class="spinner-border text-secondary" role="status">
        <span class="visually-hidden">Cargando...</span>
    </div>
</div>

<!-- Contenedor -->
<div id="servicesContainerInactive">
    @await Html.PartialAsync("_ServicesTable", Model)
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            let typingTimer;
            const doneTypingInterval = 400;

            $("#searchInputInactiveService").on("keyup", function () {
                clearTimeout(typingTimer);
                const query = $(this).val();

                typingTimer = setTimeout(function () {
                    $.ajax({
                        url: '/Services/FilterInactiveServices',
                        type: 'GET',
                        data: { search: query },
                        beforeSend: function () {
                            $("#loadingSpinner").fadeIn(150);
                        },
                        success: function (result) {
                            $("#servicesContainerInactive").hide().html(result).fadeIn(150);
                        },
                        complete: function () {
                            $("#loadingSpinner").fadeOut(150);
                        },
                        error: function () {
                            console.error("Error al filtrar servicios inactivos");
                        }
                    });
                }, doneTypingInterval);
            });
        });
    </script>
}
