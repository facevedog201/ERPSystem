@model ERPSystem.Models.Service
@{
    Layout = "_Layout";
    ViewData["Title"] = "Detalle del Servicio";
}

<h2>Detalle del Servicio</h2>

<div class="mb-3">
    <strong>Nombre:</strong> @Model.Name
</div>
<div class="mb-3">
    <strong>Descripción:</strong> @Model.Description
</div>
<div class="mb-3">
    <strong>Precio:</strong> @Model.Price.ToString("C")
</div>
<div class="mb-3">
    <strong>Tipo:</strong> @Model.Type
</div>
<div class="mb-3">
    <strong>Activo:</strong> @(Model.IsActive ? "Sí" : "No")
</div>

<a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.ServiceId">Editar</a>
<a class="btn btn-secondary" asp-action="Index">Volver</a>
