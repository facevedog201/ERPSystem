@model ERPSystem.Models.Service
@using ERPSystem.Helpers
@{
    Layout = "_Layout";
    ViewData["Title"] = "Detalle del Servicio";
}

<h2>Detalle del Servicio</h2>

<div class="mb-3">
    <strong>Nombre:</strong> @Model.Name
</div>
<div class="mb-3">
    <strong>Descripción:</strong> @Model.Description
</div>
<div class="mb-3">
    <strong>Precio:</strong> @Model.Price.ToString("C")
</div>
<div class="mb-3">
    <strong>Tipo:</strong> @Model.Type
</div>
<div class="mb-3">
    <strong>Activo:</strong>
    @if (Model.IsActive)
    {
        <span class="badge bg-success">Sí</span>
    }
    else
    {
        <span class="badge bg-danger">No</span>
    }
</div>

<div class="mb-3">
    @* Botones según roles y estado *@
    @if (Model.IsActive && (User.IsInRole(UserRole.Admin.ToString()) || User.IsInRole(UserRole.Recepcion.ToString())))
    {
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.ServiceId">Editar</a>
    }
    else if (!Model.IsActive && User.IsInRole(UserRole.Admin.ToString()))
    {
        <a class="btn btn-success" asp-action="Activate" asp-route-id="@Model.ServiceId">Reactivar</a>
    }
    <a class="btn btn-secondary" asp-action="Index">Volver</a>
</div>
