<!-- 🔽 Usando  AJAX-->

@model IEnumerable<ERPSystem.Models.Service>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Servicios";
}

<div class="d-flex justify-content-between mb-3">
    <h2>Servicios</h2>
    <div>
        <a class="btn btn-success" asp-action="Create">
            <i class="bi bi-plus-circle"></i> Crear Nuevo Servicio
        </a>
        @if (User.IsInRole(UserRole.Admin.ToString()))
        {
            <a class="btn btn-secondary" asp-action="InactiveServices">
                <i class="bi bi-archive"></i> Ver Inactivos
            </a>
        }
    </div>
</div>

<!-- 🔍 FORMULARIO DE FILTRO -->
<form id="filterForm" method="get" class="row g-3 mb-4">
    <div class="col-md-4">
        <input type="text" name="name" value="@ViewBag.Name" class="form-control" placeholder="Buscar por nombre..." />
    </div>

    <div class="col-md-3">
        @Html.DropDownList("hasIVA",
        new SelectList(new[] {
                new { Value = "", Text = "-- IVA (Todos) --" },
                new { Value = "true", Text = "Con IVA" },
                new { Value = "false", Text = "Sin IVA" }
                }, "Value", "Text", ViewBag.HasIVA),
                new { @class = "form-select" })
    </div>

    <div class="col-md-3">
        <input type="number" step="0.01" name="price" value="@ViewBag.Price" class="form-control" placeholder="Precio base exacto..." />
    </div>

    <div class="col-md-2 text-end">
        <button type="submit" class="btn btn-primary w-100">
            <i class="bi bi-filter"></i> Filtrar
        </button>
    </div>
</form>


<!-- 🔽 Contenedor donde se cargará la tabla -->
<div id="servicesTableContainer">
    @await Html.PartialAsync("_ServicesTable", Model)
</div>

@section Scripts {
    <script>
        // Interceptar el envío del formulario
        document.getElementById("filterForm").addEventListener("submit", function (e) {
            e.preventDefault(); // Evita recargar toda la página

            const form = e.target;
            const params = new URLSearchParams(new FormData(form));

            fetch(`/Services/FilterServices?${params.toString()}`, {
                headers: { "X-Requested-With": "XMLHttpRequest" }
            })
            .then(response => response.text())
            .then(html => {
                document.getElementById("servicesTableContainer").innerHTML = html;
            })
            .catch(error => console.error("Error al filtrar servicios:", error));
        });
    </script>
}
