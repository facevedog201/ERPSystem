    Layout = "_Layout";
    ViewData["Title"] = "Servicios";
}

<div class="d-flex justify-content-between mb-3">
    <h2>Servicios</h2>
    <div>
        <a class="btn btn-success" asp-action="Create">Crear Nuevo Servicio</a>
        @if (User.IsInRole(UserRole.Admin.ToString()))
        {
            <a class="btn btn-secondary" asp-action="InactiveServices">Ver Inactivos</a>
        }
    </div>
</div>

@await Html.PartialAsync("_ServicesTable", Model)

