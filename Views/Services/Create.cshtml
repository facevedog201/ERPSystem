@model ERPSystem.Models.Service
@using ERPSystem.Helpers
@{
    Layout = "_Layout";
    ViewData["Title"] = "Crear Servicio";
}

<h2>Crear Servicio</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label class="form-label">Nombre</label>
        <input class="form-control" asp-for="Name" placeholder="Ejemplo: Transporte local" value="Transporte estándar" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Descripción</label>
        <textarea class="form-control" asp-for="Description" placeholder="Describe brevemente el servicio...">Servicio básico de transporte de mercancías.</textarea>
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Precio Base (C$)</label>
        <input type="number" step="0.01" class="form-control" asp-for="Price" value="100.00" />
        <span class="text-danger" asp-validation-for="Price"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Tipo de Servicio</label>
        <select class="form-select" asp-for="Type" asp-items="Html.GetEnumSelectList<ERPSystem.Models.ServiceType>()">
        </select>
        <span class="text-danger" asp-validation-for="Type"></span>
    </div>

    <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" asp-for="HasIVA" />
        <label class="form-check-label" for="HasIVA">Aplica IVA (15%)</label>
    </div>

    @if (User.IsInRole(UserRole.Admin.ToString()))
    {
        <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" asp-for="IsActive" checked />
            <label class="form-check-label" for="IsActive">Activo</label>
        </div>
    }

    <div class="d-flex justify-content-between mt-4">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-save"></i> Guardar
        </button>
        <a class="btn btn-secondary" asp-action="Index">
            <i class="bi bi-arrow-left"></i> Cancelar
        </a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}