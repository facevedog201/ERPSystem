@model ERPSystem.Models.Provider
@{
    ViewData["Title"] = "Detalle del Proveedor";
}

<h2>Detalle del Proveedor</h2>

<div class="mb-3">
    <strong>Nombre:</strong> @Model.Name
</div>
<div class="mb-3">
    <strong>Email:</strong> @Model.Email
</div>
<div class="mb-3">
    <strong>Teléfono:</strong> @Model.Phone
</div>
<div class="mb-3">
    <strong>Dirección:</strong> @Model.Address
</div>
<div class="mb-3">
    <strong>Activo:</strong>
    <span class="badge @(Model.IsActive ? "bg-success" : "bg-danger")">
        @(Model.IsActive ? "Sí" : "No")
    </span>
</div>

<a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.ProviderId">Editar</a>
<a class="btn btn-secondary" asp-action="Index">Volver</a>
