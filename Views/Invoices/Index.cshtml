@model IEnumerable<ERPSystem.Models.Invoice>
@{
    ViewData["Title"] = "Facturas";
}

<h2>Facturas</h2>

<form method="get" class="mb-3">
    <div class="input-group">
        @*@<input type="text" name="search" class="form-control" placeholder="Buscar por número de factura o cliente..." value="@Request.Query["search"]" />*@
        <input type="text" name="search" class="form-control" placeholder="Buscar por número de factura o cliente..." value="@ViewBag.Search" />
        <button type="submit" class="btn btn-primary">Buscar</button>
    </div>
</form>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>#Factura</th>
            <th>Cliente</th>
            <th>Fecha</th>
            <th>Total</th>
            <th>Pagado</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var invoice in Model)
        {
            <tr>
                <td>@invoice.InvoiceId</td>
                <td>@invoice.Client.Name</td>
                <td>@invoice.InvoiceDate.ToString("dd/MM/yyyy")</td>
                <td>@invoice.Total.ToString("C")</td>
                <td>@invoice.PaidAmount.ToString("C")</td>
                <td>@invoice.Status</td>
                <td>
                    <a asp-action="Details" asp-route-id="@invoice.InvoiceId" class="btn btn-info btn-sm">Ver</a>
                    @if (User.IsInRole("Admin") || User.IsInRole("Contador"))
                    {
                        <a asp-action="Delete" asp-route-id="@invoice.InvoiceId" class="btn btn-danger btn-sm">Eliminar</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
