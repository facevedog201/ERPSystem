@model ERPSystem.Models.Invoice
@{
    ViewData["Title"] = "Detalles Factura";
}

<h2>Factura #@Model.InvoiceId</h2>

<div class="mb-3">
    <strong>Cliente:</strong> @Model.Client.Name <br />
    <strong>Fecha:</strong> @Model.InvoiceDate.ToString("dd/MM/yyyy") <br />
    <strong>Total:</strong> @Model.Total.ToString("C") <br />
    <strong>Pagado:</strong> @Model.PaidAmount.ToString("C") <br />
    <strong>Estado:</strong> <span class="badge @(Model.Status == ERPSystem.Models.InvoiceStatus.Paid ? "bg-success" : Model.Status == ERPSystem.Models.InvoiceStatus.Partial ? "bg-warning" : "bg-secondary")">@Model.Status</span>
</div>

<h4 class="mt-3">Servicios</h4>
<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Servicio</th>
            <th>Cantidad</th>
            <th>Precio</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var d in Model.InvoiceDetails)
        {
            <tr>
                <td>@d.Service.Name</td>
                <td>@d.Quantity</td>
                <td>@d.Price.ToString("C")</td>
                <td>@(d.Quantity* d.Price).ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

<h4 class="mt-3">Pagos</h4>
<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Fecha</th>
            <th>Monto</th>
            <th>Notas</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model.Payments)
        {
            <tr>
                <td>@p.PaymentDate.ToString("dd/MM/yyyy")</td>
                <td>@p.Amount.ToString("C")</td>
                <td>@p.Notes</td>
            </tr>
        }
    </tbody>
</table>

<!-- Mensajes de éxito o error -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<!-- Formulario para registrar pago -->
@if (Model.Status != ERPSystem.Models.InvoiceStatus.Paid)
{
    <h4 class="mt-3">Registrar Pago</h4>
    <form asp-action="AddPayment" asp-controller="Invoices" method="post">
        <input type="hidden" name="invoiceId" value="@Model.InvoiceId" />
        <div class="mb-3">
            <label>Monto a pagar</label>
            <input type="number" name="amount" class="form-control" step="0.01" min="0.01" required />
        </div>
        <div class="mb-3">
            <label>Notas</label>
            <input type="text" name="notes" class="form-control" />
        </div>
        <button type="submit" class="btn btn-success">Registrar Pago</button>
    </form>
}

<p class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Volver a Facturas</a>
</p>
