@model ERPSystem.Models.Invoice
@{
    ViewData["Title"] = "Detalles Factura";
}

<h2>Factura #@Model.InvoiceId</h2>

<div>
    <strong>Cliente:</strong> @Model.Client.Name <br />
    <strong>Fecha:</strong> @Model.InvoiceDate.ToString("dd/MM/yyyy") <br />
    <strong>Total:</strong> @Model.Total.ToString("C") <br />
    <strong>Pagado:</strong> @Model.PaidAmount.ToString("C") <br />
    <strong>Estado:</strong> @Model.Status
</div>

<h4 class="mt-3">Servicios</h4>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Servicio</th>
            <th>Cantidad</th>
            <th>Precio</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var d in Model.InvoiceDetails)
        {
            <tr>
                <td>@d.Service.Name</td>
                <td>@d.Quantity</td>
                <td>@d.Price.ToString("C")</td>
                <td>@(d.Quantity* d.Price).ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

<h4 class="mt-3">Pagos</h4>
@if (Model.Payments.Any())
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Fecha</th>
                <th>Monto</th>
                <th>Notas</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model.Payments)
            {
                <tr>
                    <td>@p.PaymentDate.ToString("dd/MM/yyyy")</td>
                    <td>@p.Amount.ToString("C")</td>
                    <td>@p.Notes</td>
                </tr>
            }
        </tbody>
    </table>
}

<p>
    <a asp-action="Index" class="btn btn-secondary">Volver</a>
    <a asp-action="AddPayment" asp-route-id="@Model.InvoiceId" class="btn btn-success">Agregar Pago</a>
</p>
