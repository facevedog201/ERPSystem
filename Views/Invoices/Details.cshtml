@model ERPSystem.Models.Invoice

@{
    ViewData["Title"] = "Detalles Factura";
}

<h2>Factura #@Model.InvoiceId</h2>

<div class="mb-3">
    <strong>Cliente:</strong> @Model.Client.Name <br />
    <p><strong>Fecha:</strong> @(Model.InvoiceDate?.ToString("dd/MM/yyyy", System.Globalization.CultureInfo.InvariantCulture) ?? "01/01/0000")</p>
    <p><strong>Total:</strong> @(Model.Total?.ToString("C") ?? "0.0")</p>
    <p><strong>Pagado:</strong> @(Model.PaidAmount?.ToString("C") ?? "0.0")</p>
    <strong>Estado:</strong>
    <span class="badge @(
          Model.Status.HasValue ?
          (Model.Status.Value == (int)ERPSystem.Models.InvoiceStatus.Paid ? "bg-success" :
           Model.Status.Value == (int)ERPSystem.Models.InvoiceStatus.Partial ? "bg-warning" :
           Model.Status.Value == (int)ERPSystem.Models.InvoiceStatus.Cancelled ? "bg-danger" : "bg-secondary")
          : "bg-secondary")">
        @(Model.Status.HasValue ? ((ERPSystem.Models.InvoiceStatus)Model.Status.Value).ToString() : "9")
    </span>
</div>

<h4 class="mt-3">Servicios</h4>
<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Servicio</th>
            <th>Cantidad</th>
            <th>Precio</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var d in Model.InvoiceDetails)
        {
            <tr>
                <td>@d.Service.Name</td>
                <td>@d.Quantity</td>
                <td>@d.Price.ToString("C")</td>
                <td>@(d.Quantity* d.Price).ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

<h4 class="mt-3">Pagos</h4>
@if (Model.Payments.Any())
{
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Fecha</th>
                <th>Monto</th>
                <th>Notas</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model.Payments)
            {
                <tr>
                    <td>@p.PaymentDate.ToString("dd/MM/yyyy")</td>
                    <td>@p.Amount.ToString("C")</td>
                    <td>@p.Notes</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No se han registrado pagos para esta factura.</p>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (Model.Status.HasValue
    && Model.Status.Value != (int?)ERPSystem.Models.InvoiceStatus.Paid
    && Model.Status.Value != (int?)ERPSystem.Models.InvoiceStatus.Cancelled)
{
    <h4 class="mt-3">Registrar Pago</h4>
    <form asp-action="AddPayment" asp-controller="Invoices" method="post">
        <input type="hidden" name="invoiceId" value="@Model.InvoiceId" />
        <div class="mb-3">
            <label>Monto a pagar</label>
            <input type="number" name="amount" class="form-control" step="0.01" min="0.01" required />
        </div>
        <div class="mb-3">
            <label>Notas</label>
            <input type="text" name="notes" class="form-control" />
        </div>
        <button type="submit" class="btn btn-success">Registrar Pago</button>
    </form>
}

@if ((User.IsInRole("Recepcion") || User.IsInRole("Vendedor") || User.IsInRole("Asistente"))
    && Model.Status != (int?)ERPSystem.Models.InvoiceStatus.Paid
    && Model.Status != (int?)ERPSystem.Models.InvoiceStatus.Cancelled)
{
    <h4 class="mt-3">Registrar Pago</h4>
    <form asp-action="AddPayment" method="post">
        <input type="hidden" name="invoiceId" value="@Model.InvoiceId" />
        <div class="mb-3">
            <label>Monto a pagar</label>
            <input type="number" name="amount" class="form-control" step="0.01" min="0.01" required />
        </div>
        <div class="mb-3">
            <label>Notas</label>
            <input type="text" name="notes" class="form-control" />
        </div>
        <button type="submit" class="btn btn-success">Registrar Pago</button>
    </form>
}


<p class="mt-3">
    <a asp-action="Index" class="btn btn-secondary">Volver a Facturas</a>
</p>