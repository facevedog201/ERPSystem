@model ERPSystem.Models.Invoice
@{
    ViewData["Title"] = "Editar Factura";
    var clients = ViewBag.Clients as List<ERPSystem.Models.Client>;
    var services = ViewBag.Services as List<ERPSystem.Models.Service>;
}

<h2>Editar Factura #@Model.InvoiceId</h2>

@if (Model.Status == (int?)ERPSystem.Models.InvoiceStatus.Cancelled)
{
    <div class="alert alert-danger">
        Esta factura ha sido anulada y no se puede editar.
    </div>
}
else
{
    <form asp-action="Edit" method="post">
        <input type="hidden" name="invoiceId" value="@Model.InvoiceId" />

        <div class="mb-3">
            <label>Cliente</label>
            @Html.DropDownListFor(
            m => m.ClientId,
                new SelectList(clients, "ClientId", "Name", Model.ClientId),
                "Seleccione un cliente",
                new { @class = "form-select" }
                )
    </div>

    <h4>Servicios</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Servicio</th>
                <th>Precio</th>
                <th>Cantidad</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < services.Count; i++)
                {
                    var detail = Model.InvoiceDetails.FirstOrDefault(d => d.ServiceId == services[i].ServiceId);
                    <tr>
                        <td>
                            <input type="hidden" name="serviceIds" value="@services[i].ServiceId" />
                            @services[i].Name
                        </td>
                        <td>@services[i].Price.ToString("C")</td>
                        <td>
                            <input type="number" name="quantities" value="@(detail?.Quantity ?? 0)" class="form-control" min="0" @(Model.Status == (int?)ERPSystem.Models.InvoiceStatus.Cancelled ? "disabled" : "") />
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <button type="submit" class="btn btn-primary" @(Model.Status == (int?)ERPSystem.Models.InvoiceStatus.Cancelled ? "disabled" : "")>Actualizar Factura</button>
        <a asp-action="Index" class="btn btn-secondary">Volver</a>
    </form>
}