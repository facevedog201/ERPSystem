@model ERPSystem.Models.Client
@{
    ViewData["Title"] = "Detalle del Cliente";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Detalle del Cliente</h3>
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-6">
                    <strong>Nombre:</strong> @Model.Name
                </div>
                <div class="col-md-6">
                    <strong>Correo Electrónico:</strong> @Model.Email
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <strong>Teléfono:</strong> @Model.Phone
                </div>
                <div class="col-md-6">
                    <strong>Dirección:</strong> @Model.Address
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <strong>RUC / NIT / Identificación Fiscal:</strong> @Model.RUC
                </div>
                <div class="col-md-6">
                    <strong>Fecha de Creación:</strong> @Model.CreatedAt.ToString("dd/MM/yyyy")
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <strong>Activo:</strong>
                    <span class="badge @(Model.IsActive ?? false ? "bg-success" : "bg-danger")">
                        @(Model.IsActive ?? false ? "Sí" : "No")
                    </span>
                </div>
            </div>
        </div>
        <div class="card-footer d-flex justify-content-end">
            <a class="btn btn-primary me-2" asp-action="Edit" asp-route-id="@Model.ClientId">
                <i class="bi bi-pencil-square"></i> Editar
            </a>
            <a class="btn btn-secondary" asp-action="Index">
                <i class="bi bi-arrow-left"></i> Volver
            </a>
        </div>
    </div>
</div>
