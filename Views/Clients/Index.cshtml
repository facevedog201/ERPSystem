@model IEnumerable<ERPSystem.Models.Client>
@{
    ViewData["Title"] = "Clientes";
}

<h1>@ViewData["Title"]</h1>

<div>
    <a asp-action="Create" class="btn btn-primary position-relative"><i class="bi bi-save me-2"></i> Crear Nuevo Cliente</a>
    <a asp-action="InactiveClients" class="btn btn-primary position-relative"><i class="bi bi-search me-2"></i> Ver Clientes Inactivos</a>
    <p></p>
</div>


<!-- Formulario de búsqueda -->
<div class="mb-3">
    <form method="get" class="form-inline">
        <div class="form-group mr-2">
            <label for="searchQuery">Buscar por Nombre, RUC, Teléfono o Correo:</label><p></p>
            <input type="text" id="searchQuery" name="searchQuery" class="form-control" placeholder="Ingresa tu búsqueda..." value="@Context.Request.Query["searchQuery"]" /><p></p>
        </div>
        <button type="submit" class="btn btn-secondary">Buscar</button>
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary ml-2">Limpiar</a>
    </form>
</div>

@if (Model.Any())
{
    <div class="row">
        @foreach (var cliente in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm border-secondary position-relative">
                    <div class="card-header d-flex justify-content-between align-items-center" style="z-index:2; position:relative;">
                        <h5 class="mb-0">@cliente.Name</h5>
                    </div>
                    <div class="card-body" style="z-index:2; position:relative;">
                        <p> <i class="bi bi-card-text me-2"></i><strong>RUC:</strong> @cliente.RUC</p>
                        <p> <i class="bi bi-telephone me-2"></i><strong>Teléfono:</strong> @cliente.Phone</p>
                        <p> <i class="bi bi-envelope me-2"></i><strong>Correo:</strong> @cliente.Email</p>
                        <p> <i class="bi bi-geo-alt me-2"></i><strong>Dirección:</strong> @cliente.Address</p>
                        <p> <i class="bi bi-calendar3 me-2"></i><strong>Fecha de Creación:</strong> @cliente.CreatedAt.ToString("dd/MM/yyyy")</p>
                        <a asp-action="Details" asp-route-id="@cliente.ClientId" class="btn btn-info btn-sm">Detalles</a>
                        <a asp-action="Edit" asp-route-id="@cliente.ClientId" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-action="Delete" asp-route-id="@cliente.ClientId" class="btn btn-danger btn-sm">Eliminar</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>No hay clientes activos.</p>
}