@model IEnumerable<ERPSystem.Models.Client>
@{
    ViewData["Title"] = "Clientes";
}

<h2>Clientes</h2>
<a class="btn btn-primary mb-3" asp-action="Create">Nuevo Cliente</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Email</th>
            <th>Teléfono</th>
            <th>Dirección</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var client in Model)
        {
            <tr>
                <td>@client.Name</td>
                <td>@client.Email</td>
                <td>@client.Phone</td>
                <td>@client.Address</td>
                <td>
                    <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@client.ClientId">Editar</a>
                    <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@client.ClientId">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
