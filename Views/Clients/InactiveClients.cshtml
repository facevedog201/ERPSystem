@model IEnumerable<ERPSystem.Models.Client>
@{
    ViewData["Title"] = "Clientes Inactivos";
}

<div class="container mt-4">
    <h2 class="mb-4">Clientes Inactivos</h2>

    <a class="btn btn-primary mb-4" asp-action="Index">
        <i class="bi bi-arrow-left"></i> Volver a Clientes Activos
    </a>

    <div class="row">
        @foreach (var client in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm border-secondary position-relative">
                    @* Overlay gris semitransparente para inactivos *@
                    <div class="position-absolute w-100 h-100 top-0 start-0" style="background-color: rgba(220,220,220,0.5); z-index:1; border-radius: .25rem;"></div>

                    <div class="card-header d-flex justify-content-between align-items-center" style="z-index:2; position:relative;">
                        <h5 class="mb-0">@client.Name</h5>
                        <span class="badge bg-danger">Inactivo</span>
                    </div>

                    <div class="card-body" style="z-index:2; position:relative;">
                        <p><i class="bi bi-envelope me-2"></i><strong>Correo:</strong> @client.Email</p>
                        <p><i class="bi bi-telephone me-2"></i><strong>Teléfono:</strong> @client.Phone</p>
                        <p><i class="bi bi-geo-alt me-2"></i><strong>Dirección:</strong> @client.Address</p>
                        @if (!string.IsNullOrEmpty(client.RUC))
                        {
                            <p><i class="bi bi-card-text me-2"></i><strong>RUC / NIT:</strong> @client.RUC</p>
                        }
                        <p><i class="bi bi-calendar3 me-2"></i><strong>Creado:</strong> @client.CreatedAt.ToString("dd/MM/yyyy")</p>
                    </div>

                    <div class="card-footer d-flex justify-content-end" style="z-index:2; position:relative;">
                        <form asp-action="Activate" asp-route-id="@client.ClientId" method="post" style="display:inline">
                            <button type="submit" class="btn btn-success btn-sm">
                                <i class="bi bi-arrow-repeat"></i> Reactivar
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
