@model IEnumerable<ERPSystem.Models.Client>
@{
    ViewData["Title"] = "Clientes Inactivos";
}

<h2>Clientes Inactivos</h2>

<a class="btn btn-primary mb-3" asp-action="Index">Volver a Clientes Activos</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Email</th>
            <th>Teléfono</th>
            <th>Dirección</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var client in Model)
        {
            <tr>
                <td>@client.Name</td>
                <td>@client.Email</td>
                <td>@client.Phone</td>
                <td>@client.Address</td>
                <td>
                    <form asp-action="Activate" asp-route-id="@client.ClientId" method="post" style="display:inline">
                        <button type="submit" class="btn btn-success btn-sm">Reactivar</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
