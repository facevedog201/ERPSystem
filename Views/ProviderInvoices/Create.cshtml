@model ERPSystem.Models.ProviderInvoices
@{
    ViewData["Title"] = "Nueva factura";
}

<div class="card shadow-sm border-secondary">
    <div class="card-header">
        <h5 class="mb-0">Nueva factura para @ViewBag.ProviderName</h5>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post">
            <input type="hidden" asp-for="ProviderId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="mb-3">
                <label asp-for="InvoiceNumber" class="form-label"></label>
                <input asp-for="InvoiceNumber" class="form-control" />
                <span asp-validation-for="InvoiceNumber" class="text-danger"></span>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="InvoiceDate" class="form-label"></label>
                    <input asp-for="InvoiceDate" type="date" class="form-control" />
                    <span asp-validation-for="InvoiceDate" class="text-danger"></span>
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="DueDate" class="form-label"></label>
                    <input asp-for="DueDate" type="date" class="form-control" />
                    <span asp-validation-for="DueDate" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" type="number" step="0.01" min="1"/>
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Description" class="form-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Guardar</button>
                <a asp-action="Index" asp-route-providerId="@Model.ProviderId" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}