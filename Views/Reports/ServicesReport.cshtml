@{
    ViewData["Title"] = "Servicios";
    var data = ViewBag.Data as IEnumerable<dynamic> ?? new List<dynamic>();
}

<h2>Servicios Más Solicitados</h2>

<form method="get" class="row g-2 mb-3">
    <div class="col-md-3"><input type="date" name="from" class="form-control" value="@((ViewBag.From as DateTime?)?.ToString("yyyy-MM-dd"))" /></div>
    <div class="col-md-3"><input type="date" name="to" class="form-control" value="@((ViewBag.To as DateTime?)?.ToString("yyyy-MM-dd"))" /></div>
</form>

<canvas id="servicesChart" height="120"></canvas>

<table class="table table-striped table-bordered mt-3">
    <thead class="table-dark"><tr><th>Servicio</th><th>Cantidad</th><th>Total</th></tr></thead>
    <tbody>
        @foreach (var r in data)
        {
            <tr>
                <td>@r.Service</td>
                <td>@r.Quantity</td>
                <td>@((decimal)r.Total).ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const dataLabels = [@string.Join(",", data.Select(d => $"'{d.Service}'"))];
        const dataValues = [@string.Join(",", data.Select(d => d.Quantity))];

        new Chart(document.getElementById('servicesChart'), {
            type: 'bar',
            data: { labels: dataLabels, datasets: [{ label: 'Cantidad', data: dataValues }] },
            options: { responsive: true }
        });
    </script>
}
@await Html.PartialAsync("_BackToIndexButton", "Index")