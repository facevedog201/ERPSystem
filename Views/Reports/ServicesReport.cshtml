@{
    ViewData["Title"] = "Servicios";
    var data = ViewBag.Data as IEnumerable<dynamic> ?? new List<dynamic>();
}
@section Styles {
    <link rel="stylesheet" href="~/css/print.css" />
}

<!-- Encabezado visible solo en impresión -->
<div class="print-header">
    <img src="~/images/logo.png" alt="Logo" style="height:40px;" />
    <div>ERPSystem - Reporte de Servicios mas Solicitados</div>
</div>

<h2 class="no-print">Servicios mas Solicitados</h2>

<form method="get" class="row g-2 mb-3">
    <div class="col-md-3 no-print"><input type="date" name="from" class="form-control" value="@((ViewBag.From as DateTime?)?.ToString("yyyy-MM-dd"))" /></div>
    <div class="col-md-3 no-print"><input type="date" name="to" class="form-control" value="@((ViewBag.To as DateTime?)?.ToString("yyyy-MM-dd"))" /></div>
</form>

<canvas id="servicesChart" height="120"></canvas>

<table class="table table-striped table-bordered mt-3">
    <thead class="table-dark"><tr><th>Servicio</th><th>Cantidad</th><th>Total</th></tr></thead>
    <tbody>
        @foreach (var r in data)
        {
            <tr>
                <td>@r.Service</td>
                <td>@r.Quantity</td>
                <td>@((decimal)r.Total).ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const dataLabels = [@string.Join(",", data.Select(d => $"'{d.Service}'"))];
        const dataValues = [@string.Join(",", data.Select(d => d.Quantity))];

        new Chart(document.getElementById('servicesChart'), {
            type: 'bar',
            data: { labels: dataLabels, datasets: [{ label: 'Cantidad', data: dataValues }] },
            options: { responsive: true }
        });
    </script>
}

<!-- Botones de acción (no se imprimen) -->
<div class="d-flex justify-content-between align-items-center mb-3 no-print">
    <h2>Reporte de Clientes</h2>
    <div>
        <button class="btn btn-outline-primary me-2" onclick="window.print()">
            <i class="bi bi-printer"></i> Imprimir
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Volver
        </a>
    </div>
</div>