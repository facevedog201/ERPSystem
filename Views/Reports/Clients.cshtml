@{
    ViewData["Title"] = "Reporte Clientes";
    var data = ViewBag.Data as IEnumerable<dynamic> ?? new List<dynamic>();

    decimal totalFacturado = data.Sum(d => (decimal)d.Total);
    decimal totalPendiente = data.Sum(d => (decimal)d.MontoPendiente);
    decimal totalPagado = data.Sum(d => (decimal)d.MontoPagado);
}
@section Styles {
    <link rel="stylesheet" href="~/css/print.css" />
}

<!-- Encabezado visible solo en impresión -->
<div class="print-header">
    <img src="~/images/logo.png" alt="Logo" style="height:40px;" />
    <div>ERPSystem - Reporte de Clientes</div>
</div>

<h2 class="no-print">Clientes</h2>

<!-- Filtros (no se imprimen) -->
<form method="get" class="row g-2 mb-3 no-print">
    <div class="col-md-3">
        <label class="form-label">Desde</label>
        <input type="date" name="from" class="form-control"
               value="@((ViewBag.From as DateTime?)?.ToString("yyyy-MM-dd"))" />
    </div>
    <div class="col-md-3">
        <label class="form-label">Hasta</label>
        <input type="date" name="to" class="form-control"
               value="@((ViewBag.To as DateTime?)?.ToString("yyyy-MM-dd"))" />
    </div>
    <div class="col-md-6 text-end d-flex align-items-end justify-content-end">
        <button class="btn btn-primary me-2">
            <i class="bi bi-funnel-fill"></i> Filtrar
        </button>
    </div>
</form>

<!-- Tabla de clientes -->
<table class="table table-bordered table-striped align-middle">
    <thead class="table-dark">
        <tr>
            <th>Cliente</th>
            <th class="text-center">Total Facturas</th>
            <th class="text-end">Total Facturado</th>
            <th class="text-end">Saldo Pendiente</th>
            <th class="text-center">Facturas Pendientes</th>
            <th class="text-end">Total Pagado</th>
            <th class="text-center">Facturas Pagadas</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var r in data)
        {
            <tr>
                <td>@r.Client</td>
                <td class="text-center">@r.Count</td>
                <td class="text-end">@string.Format("{0:C}", r.Total)</td>
                <td class="text-end">@string.Format("{0:C}", r.MontoPendiente)</td>
                <td class="text-center">@r.FacturasPendientes</td>
                <td class="text-end">@string.Format("{0:C}", r.MontoPagado)</td>
                <td class="text-center">@r.FacturasPagadas</td>
            </tr>
        }
        <tr class="table-total fw-bold">
            <td>Total General</td>
            <td class="text-center">@data.Sum(d => (int)d.Count)</td>
            <td class="text-end">@string.Format("{0:C}", totalFacturado)</td>
            <td class="text-end">@string.Format("{0:C}", totalPendiente)</td>
            <td class="text-center">@data.Sum(d => (int)d.FacturasPendientes)</td>
            <td class="text-end">@string.Format("{0:C}", totalPagado)</td>
            <td class="text-center">@data.Sum(d => (int)d.FacturasPagadas)</td>
        </tr>
    </tbody>
</table>

<!-- Botones de acción (no se imprimen) -->
<div class="d-flex justify-content-between align-items-center mb-3 no-print">
    <div>
        <button class="btn btn-primary me-2" onclick="window.print()">
            <i class="bi bi-printer"></i> Imprimir
        </button>
        <a asp-action="Index" class="btn btn-danger">
            <i class="bi bi-arrow-left-circle"></i> Volver
        </a>
    </div>
</div>
