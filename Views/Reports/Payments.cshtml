@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "Reporte de Pagos";
}

<h2>@ViewData["Title"]</h2>

<form method="get" class="row g-2 mb-3">
    <div class="col-md-3">
        <label>Desde</label>
        <input type="date" name="from" value="@((ViewBag.From as DateTime?)?.ToString("yyyy-MM-dd"))" class="form-control" />
    </div>
    <div class="col-md-3">
        <label>Hasta</label>
        <input type="date" name="to" value="@((ViewBag.To as DateTime?)?.ToString("yyyy-MM-dd"))" class="form-control" />
    </div>
    <div class="col-md-3 d-flex align-items-end">
        <button class="btn btn-primary me-2">Filtrar</button>
        <a href="?export=excel" class="btn btn-success">Exportar Excel</a>
    </div>
</form>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID Pago</th>
            <th>Fecha</th>
            <th>Cliente</th>
            <th>Factura</th>
            <th>Monto</th>
            <th>Notas</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.PaymentId</td>
                <td>@p.PaymentDate.ToString("dd/MM/yyyy")</td>
                <td>@p.ClientName</td>
                <td>@p.InvoiceId</td>
                <td>@p.Amount.ToString("C")</td>
                <td>@p.Notes</td>
            </tr>
        }
    </tbody>
</table>
@await Html.PartialAsync("_BackToIndexButton", "Index")

