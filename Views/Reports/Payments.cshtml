@model IEnumerable<dynamic>
@{
    ViewData["Title"] = "Reporte de Pagos";
}

@section Styles {
    <link rel="stylesheet" href="~/css/print.css" />
}


<h2>@ViewData["Title"]</h2>

<form method="get" class="row g-2 mb-3">
    <div class="col-md-3">
        <label>Desde</label>
        <input type="date" name="from" value="@((ViewBag.From as DateTime?)?.ToString("yyyy-MM-dd"))" class="form-control" />
    </div>
    <div class="col-md-3">
        <label>Hasta</label>
        <input type="date" name="to" value="@((ViewBag.To as DateTime?)?.ToString("yyyy-MM-dd"))" class="form-control" />
    </div>
    <div class="col-md-3 d-flex align-items-end">
        <button class="btn btn-primary me-2"><i class="bi bi-funnel-fill"></i>Filtrar</button>
        <a href="?export=excel" class="btn btn-success"><i class="bi bi-file-earmark-excel-fill"></i>Exportar Excel</a>
    </div>
</form>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID Pago</th>
            <th>Fecha</th>
            <th>Cliente</th>
            <th>Factura</th>
            <th>Monto</th>
            <th>Notas</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.PaymentId</td>
                <td>@p.PaymentDate.ToString("dd/MM/yyyy")</td>
                <td>@p.ClientName</td>
                <td>@p.InvoiceId</td>
                <td>@p.Amount.ToString("C")</td>
                <td>@p.Notes</td>
            </tr>
        }
    </tbody>
</table>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Reporte de Pagos</h2>
    <div>
        <button class="btn btn-outline-primary me-2" onclick="window.print()">
            <i class="bi bi-printer"></i> Imprimir
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Volver
        </a>
    </div>
</div>
