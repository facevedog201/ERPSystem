@model (string Title, string Value, string IconClass, string ExtraClass)

<div class="col">
    <div class="card @Model.ExtraClass">
        <div class="card-body">
            <div class="d-flex align-items-center">
                <div class="me-3">
                    <i class="@Model.IconClass" style="font-size:28px"></i>
                </div>
                <div>
                    <div class="text-muted">@Model.Title</div>
                    <div class="fs-4 fw-bold">@Model.Value</div>
                </div>
            </div>
        </div>
    </div>
</div>
